<p id="notice"><%= notice %></p>

<h1>Listing Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Submitted by user</th>
      <th>Assigned to user</th>
      <th>Reported by</th>
      <th>Spark room</th>
      <th>Contact info phone</th>
      <th>Contact info email</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.title %></td>
        <td><%= ticket.submitted_by_user_id %></td>
        <td><%= ticket.assigned_to_user_id %></td>
        <td><%= ticket.reported_by %></td>
        <td><%= ticket.spark_room_id %></td>
        <td><%= ticket.contact_info_phone %></td>
        <td><%= ticket.contact_info_email %></td>
        <td><%= ticket.notes %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

